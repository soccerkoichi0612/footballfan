<% if logged_in? %>
  <div class="container">
      <div class="row">
          <div class="col-sm-5">
            <div class="border border-info rounded p-2">
              <h3>あなたのお気に入りチームは？</h3>
              <p>新しくチームを追加しよう！</p>
              <%= form_with(model: @team, local: true) do |f| %>
                  <div class="form-group">
                      <%= render 'layouts/error_messages', model: f.object %>
                      <%= f.label :name, 'チーム名' %>
                      <%= f.text_field :name, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                      <%= f.label :name, '画像' %>
                      <%= f.file_field :image_file %>
                  </div>
                  <div class="submit text-center">
                      <%= f.submit '作成', class: 'btn btn-info btn-md' %>
                  </div>
              <% end %>
            </div>
          </div>
          <div class="col-sm-7">
              <%= render 'teams', teams: @teams %>
          </div>
      </div>
  </div>
<% else %>
  <%= render 'teams', teams: @teams %>
<% end %>

